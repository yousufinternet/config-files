# open the terminal
super + Return
   $TERMINAL

# all open windows
super + w
     rofi -show window -terminal $TERMINAL -dpi 0 -theme $ROFI_THEME -modi window,windowcd

# start an application
super + e
     rofi -show-icons -terminal $TERMINAL -show run -dpi 0 -theme $ROFI_THEME -modi run,drun,ssh

# Raise/Lower volume
XF86Audio{Raise,Lower}Volume
   volume_ctl.sh {+5,-10}

# Raise/Lower volume
super+{m,n}
   volume_ctl.sh {+5,-10}

# Increase/decrease brightness
{_,shift+}XF86MonBrightness{Up,Down}
   brightness_ctl.sh {+5,+1,-5,-1}

# Increase/decrease brightness
super+shift+{m,n}
   brightness_ctl.sh {+5,-5}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#  _                             
# | |__  ___ _ __ __ __ __ _ __  
# | '_ \(_-<| '_ \\ V  V /| '  \ 
# |_.__//__/| .__/ \_/\_/ |_|_|_|
#           |_|                  

# alternate between the tiled and monocle layout
super + Tab
  bspc desktop -l next

# Help: open bspwm man page as pdf in zathura
super + F1
  man -Tpdf bspc | zathura - 

# Help: opens a rofi menu with all man pages, displays the selected man page in zathura
super + shift + F1
  browse_man_pages.py

# move a single floating window into the corner
super + v
  move_floating.py
  
# resize root node to 30%/70%
super +{_, shift +} z
  bspc node @/ --ratio {0.3,0.7}

# Inrease decrease windows gaps in current desktop
super + {F7,F8}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Set windows gaps in current desktop to 0
super + F9
  bspc config -d focused window_gap 0

# Mark the current desktop as tiled
super + shift + t
  set_tiled.py

# close/kill focused node
super + {_,shift + } q
  tab_aware_close.py {close,kill}

# Toggle screen brightness between 1%/100%
super + shift + b
  toggle_brightness.py

# balance nodes
super + b
   bspc node @/ --balance

# Rotate nodes
super + r
   bspc node @/ --rotate 90

# Rotate the current node with parent
super + shift + r
   bspc node @parent --rotate 270

# toggle window state tiled/floating/fullscreen
super + {space,shift + space,f}
	bspc node -t {tiled,floating,fullscreen}

# swap the current node and the biggest node
super + s
	bspc node -s biggest.local

# make current window sticky
super + shift + s
  bspc node --flag sticky

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop --focus,node --to-desktop} 'focused:^{1-9,10}'

# move and switch windows between monitors
super + {_,shift +} {comma, period}
  bspc {monitor --focus,node --to-monitor} {prev,next}

# Switch to next/prev desktop
super + ctrl + {Left,Right}
    bspc desktop -f {prev,next}

# Switch to next empty/full desktop
super + ctrl + {Up, Down}
    empty_desk.py {empty, full}

# put current window in its own tabbed window, remove it from tabbed
super + t; {c,r,a}
    tabbed_company.py {create,remove,all}

# join current window with tabbed in DIR
super + t; {Left,Up,Down,Right}
    tabbed_company.py join $(bspc query -N -n {west,north,south,east})

# toggle hidden windows
super + x
  bspc node -g hidden

# restore/replace current node with hidden
super + {ctrl,shift} + x
  replace_with_hidden.py {show,swap}

# hide all windows except focused
super + alt + x
  hide_all.py   

super + ctrl + shift + x
   i3lock -e -B --force-clock --keylayout 0 --insidecolor 1e58a46a --indicator

super + shift + e
   oblogout

# # hide everything in direction
# super + alt + {Left,Up,Down,Right}
#    hide_all.py {west,north,south,east}

# contract a window by moving one of its side inward
super + ctrl + shift + {h,j,k,l}
	bspc node --resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# contract a window by moving one of its side inward
super + ctrl + shift + {Left,Down,Up,Right}
	bspc node --resize {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node --{focus,to-node} {west,south,north,east}

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node --{focus,to-node} {west,south,north,east}

# switch between windows when in monocle mode
super + {_,shift + } c
  bspc node --focus {next,prev}.local

# focus the node for the given path jump
super + {p,o}
	bspc node -f @{parent,brother}

# fullscreen screenshot
@Print
  spectacle --background

# Select region for screenshot
@shift+Print
  spectacle --background --region

# Quit bspwm
super + ctrl + shift + q
  bspc quit

# Restart bspwm
@super + ctrl + shift + r
  xfce4-panel -r -d;\
  bspc wm --restart

# Select a window to kill
@super + ctrl + shift + k
  xkill

#    _             _ _         _   _             
